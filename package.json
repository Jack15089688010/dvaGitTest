{
  "private": true,
  "scripts": {
    "start": "roadhog server",
    "build": "roadhog build",
    "lint": "eslint --ext .js src test",
    "precommit": "npm run lint"
  },
  "dependencies": {
    "dva": "^2.4.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "babel-plugin-dva-hmr": "^0.3.2",
    "eslint": "^4.14.0",
    "eslint-config-umi": "^0.1.1",
    "eslint-plugin-flowtype": "^2.34.1",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "husky": "^0.12.0",
    "redbox-react": "^1.4.3",
    "roadhog": "^2.5.0-beta.4",
    "cz-conventional-changelog": "^3.3.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog",
      "types": {
        "feat": {
          "description": "开发新增功能"
        },
        "fix": {
          "description": "修复功能bug"
        },
        "perf": {
          "description": "项目性能优化"
        },
        "refactor": {
          "description": "重构代码"
        },
        "docs": {
          "description": "项目文档更新(如：readme.md等)"
        },
        "style": {
          "description": "不影响程序逻辑的代码修改(修改空白字符，代码格式化/补全缺失的分号等)"
        },
        "revert": {
          "description": "回滚某个更早之前的提交"
        },
        "build": {
          "description": "主要目的是修改项目构建系统(例如webpack，package.json的配置等)的提交"
        },
        "ci/cd": {
          "description": "主要目的是修改项目继续集成流程(例如 Travis，Jenkins，GitLab CI，Circle等)的提交"
        }
      }
    }
  }
}
